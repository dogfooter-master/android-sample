<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:id="@+id/linearLayoutCompat"
            app:layout_constraintEnd_toEndOf="parent" tools:layout_editor_absoluteY="-27dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
            >
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="@string/host"
                        android:ems="10"
                        android:id="@+id/editTextHost"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="0dp"
                        android:autofillHints=""
                        android:layout_above="@id/editTextAccount"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="@string/account"
                        android:ems="10"
                        android:id="@+id/editTextAccount"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="0dp"
                        android:autofillHints=""
                        android:layout_above="@+id/editTextPassword"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textPassword"
                        android:text="@string/password"
                        android:ems="10"
                        android:id="@+id/editTextPassword"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="0dp"
                        android:autofillHints=""
                        android:layout_above="@+id/buttonConnect"/>
                <Button
                        android:text="@string/connect"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:id="@+id/buttonConnect"
                        android:layout_marginEnd="0dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_marginBottom="4dp"/>
            </android.support.v7.widget.LinearLayoutCompat>
        </RelativeLayout>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>